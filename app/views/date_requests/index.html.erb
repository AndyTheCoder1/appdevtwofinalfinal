<p id="notice"><%= notice %></p>

<h1>Date Requests</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Acceptance</th>
      <th>Weekly rose</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @date_requests.each do |date_request| %>
      <tr>
        <td><%= date_request.sender_id %></td>
        <td><%= date_request.recipient_id %></td>
        <td><%= date_request.acceptance %></td>
        <td><%= date_request.weekly_rose %></td>
        <td><%= link_to 'Show', date_request %></td>
        <td><%= link_to 'Edit', edit_date_request_path(date_request) %></td>
        <td><%= link_to 'Destroy', date_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

